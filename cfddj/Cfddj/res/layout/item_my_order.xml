<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pointvideo_item_height"
        android:background="@drawable/background_sub_point_item"
        android:duplicateParentState="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myorder_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/app_icon"
            android:duplicateParentState="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/productName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/pointvideo_textDetail_textSize" />

            <TextView
                android:id="@+id/productFee"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/color_grey"
                android:textSize="@dimen/pointvideo_textDetail_textSize" />

            
            <TextView
                android:id="@+id/starttime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/color_grey"
                android:textSize="@dimen/pointvideo_textDetail_textSize" />

            <TextView
                android:id="@+id/endtime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/color_grey"
                android:textSize="@dimen/pointvideo_textDetail_textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="36dip"
            android:duplicateParentState="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="@dimen/small_size" >

            <Button
                android:visibility="invisible"
                android:id="@+id/ubsubscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_bigbutton_normal"
                android:text="@string/myorder_button"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
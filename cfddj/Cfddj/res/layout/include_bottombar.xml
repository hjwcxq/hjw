<?xml version="1.0" encoding= "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/textinput_header_height"
    android:background="@drawable/bg_input_msg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/voiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/small_size"
        android:background="@drawable/chatting_setmode_voice_btn_normal" />

    <ImageView
        android:id="@+id/btn_goto_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ssmall_size"
        android:layout_toRightOf="@+id/voiceBtn"
        android:background="@drawable/keyboard"
        android:visibility="gone" />

    <Button
        android:id="@+id/say_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/small_size"
        android:layout_toRightOf="@+id/btn_goto_msg"
        android:background="@drawable/white_btn"
        android:text="按住  说话"
        android:textColor="@color/color_black"
        android:visibility="gone" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dip"
        android:layout_marginRight="@dimen/small_size"
        android:layout_marginTop="2dip"
        android:background="@drawable/btn_style_two_pressed"
        android:text="@string/send"
        android:textColor="@color/color_white" />

    <EditText
        android:id="@+id/inputEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sendBtn"
        android:layout_alignTop="@+id/sendBtn"
        android:layout_margin="@dimen/ssmall_size"
        android:layout_toLeftOf="@+id/sendBtn"
        android:layout_toRightOf="@+id/voiceBtn"
        android:background="@drawable/chat_edit_normal" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stock_video_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/item_selectable_white"
        android:duplicateParentState="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon4PointVideoItem"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/z_default_blank"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_size"
            android:layout_toRightOf="@+id/icon4PointVideoItem"
            android:duplicateParentState="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title4PointVideoItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="@color/text_button"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/detail4PointVideoItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />
        </LinearLayout>

       
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/small_size"
            android:layout_marginRight="@dimen/small_size"
            android:background="@color/view_line" />
    </RelativeLayout>

</LinearLayout>
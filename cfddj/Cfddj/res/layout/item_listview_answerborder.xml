<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/llarge_size"
        android:src="@drawable/icon_replay_up" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginRight="@dimen/normal_size"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewAnswerUserInfo4ItemListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/list_item_title_text_color"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/textViewAnswerDate4ItemListView"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:textColor="@color/list_item_title_text_color"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dip"
            android:background="@color/list_item_answer_text_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewAnswer4ItemListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_size"
            android:textColor="@color/text_button"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

</LinearLayout>
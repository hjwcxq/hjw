<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dip" >

    <TextView
        android:id="@+id/title4ItemModify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:minWidth="230dip" />

    <EditText
        android:id="@+id/editText14ItemModify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editText24ItemModify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editText34ItemModify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editText44ItemModify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editText54ItemModify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dip" >

            <Button
                android:id="@+id/buttonYes4ItemModify"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="确定" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dip" >

            <Button
                android:id="@+id/buttonNo4ItemModify"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>